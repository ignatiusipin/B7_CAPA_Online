<script>
    $(document).ready(function () {
        $('#add_Content').click(function () {
           
        });

        $('#btn_AddKondisi').click(function () {
            dto = {
                Aspect: $('#Select_AspectKondisi').val(),
                WSBH: $('#TxtWSBH').val(),
                WAH: $('#TxtWAH').val(),
                Status: $('#TxtStatus').val()
            }

            $.ajax({
                url: 'AddKondisi',
                type: 'post',
                data: JSON.stringify(dto),
                dataType: 'json',
                contentType: 'application/json; charset=utf-8',

                success: function (data) {
                    console.log(data);
                    $('#Div_PRCA').prop("hidden", false);
                    var trHTML = '';
                    var trav = 0;
                    var Count = data.length;
                    for (trav = 0; trav < Count; trav++) {
                        trHTML += '<tr>' +
                            '<td>' + data[trav].Aspect + '</td>' +
                            '<td><input type="text" value="' + data[trav].WAH + '" class="form-control form-control-sm" style="width:100%;" readonly ></td>' +
                            '<td><input type="text" class="form-control form-control-sm Why" style="width:100%;"></td>' +
                            '<th><button class="form-control-sm addWhy" >Add</button></th>' +
                            '</tr>';
                    }
                    $("#Tbl_PRCA").empty();
                    $("#Tbl_PRCA").append(trHTML);
                },
                error: function (ex) {
                    alert(JSON.stringify(ex));
                }
            });
        });
    });
</script>
