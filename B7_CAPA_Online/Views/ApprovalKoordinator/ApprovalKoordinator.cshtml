<script>
    $(document).ready(function () {
        var count = 0;
        $("input[name='Potensi']").click(function () {
            $("#Div_Pencegahan").prop('hidden', true);
            if ($("input[name='Potensi']:checked").val() == 'true') {
                count--;
                $("#Div_Pencegahan").prop('hidden', false);
                if (count == 0) {
                    count--;
                }
            }
            else {
                count++;
                if (count == 0) {
                    count++;
                }
            }
            if (count < -1 || count > 1) {
                count = 0;
                $("#Div_Pencegahan").prop('hidden', true);
                return $("input[name='Potensi']").prop("checked", false);
            }

        });

    });
</script>