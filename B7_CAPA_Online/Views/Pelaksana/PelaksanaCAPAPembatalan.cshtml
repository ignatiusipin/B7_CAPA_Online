<input type="text" id="input_NoCAPA" value="@ViewBag.NoCAPA" hidden>


<script>
    var noCAPA = getQueryStrings()["NoCAPA"];
    var nik = '@Request.RequestContext.HttpContext.Session["NIK"]';
    var namaUser = '@Request.RequestContext.HttpContext.Session["NamaUser"]';
    var superiorName = '@Request.RequestContext.HttpContext.Session["SuperiorName"]';
    var dataPerbaikan, attachmentPerbaikan, dataPencegahan, attachmentPencegahan;
    var statuser = false;
    var stataction = false;
    var laststate = false;
    var referenceID = getQueryStrings()["ReferenceID"];
    var tindakan = getQueryStrings()["Tindakan"]
    $('#input_NoCAPA').val(noCAPA);
    //function untuk ambil semua query string
    function getQueryStrings() {
        var vars = [], hash;
        var hashes = window.location.href.slice(window.location.href.indexOf('?') + 1).split('&');
        for (var i = 0; i < hashes.length; i++) {
            hash = hashes[i].split('=');
            vars.push(hash[0]);
            vars[hash[0]] = hash[1];
        }
        return vars;
    }

    $(document).ready(function () {
        if (tindakan == "Perbaikan") {
            $('#Perbaikan').attr("hidden", false);
            $('#txtPelaksanaPerbaikan').val(namaUser);
            $('#txtSuperiorPerbaikan').val(superiorName);
            getRootCausePerbaikan();
        }
        else
        {
            $('#txtPelaksanaPencegahan').val(namaUser);
            $('#txtSuperiorPencegahan').val(superiorName);
            $('#Pencegahan').attr("hidden", false);
            getRootCausePencegahan();
        }
        $('#btn_AddKajian').attr("disabled", true);
        $('#RootCause_KajianResikoDDL').attr("disabled", true);
        $('#AlasanBatalPerbaikan').on('click',function () {


            $('#RootCause_KajianResikoDDL').empty();

            $('#RootCause_KajianResikoDDL').append(new Option($('#txtTindakanPerbaikan').val(), $('#txtTindakanPerbaikan').val()));
        });
        $('#AlasanBatalPerbaikan').on('change', function () {
            $('#btn_AddKajian').attr("disabled", false);
        });
        $('#AlasanBatalPencegahan').on('click', function () {


            $('#RootCause_KajianResikoDDL').empty();

            $('#RootCause_KajianResikoDDL').append(new Option($('#txtTindakanPencegahan').val(), $('#txtTindakanPencegahan').val()));
        });
        $('#AlasanBatalPencegahan').on('change', function () {
            $('#btn_AddKajian').attr("disabled", false);
        });

        $('#Submit').click(function () {
            if (tindakan == "Perbaikan") {
                SubmitPerbaikan();
            }
            else
            {
                SubmitPencegahan();
            }
        });
    });


     function getRootCausePerbaikan() {
            var dto = {
                Kategori: "Cari Perbaikan",
                RecordID: referenceID
            }
            $.ajax({
                url: "FindCAPADetail",
                type: "POST",
                async: false,
                dataType: "json",
                data: JSON.stringify(dto),
                contentType: "application/json;charset=utf-8",
                success: function (data) {
                    var result = JSON.parse(data);
                    dataPerbaikan = result[0];
                    var duedate = moment(dataPerbaikan.Due_Date);
                    $('#txtRootCausePerbaikan').val(dataPerbaikan.WhyDesc);
                    $('#txtTindakanPerbaikan').val(dataPerbaikan.Tindakan_Perbaikan);
                    $('#txtTindakanPerbaikan').prop("disabled", true);
                    $('#dueDatePerbaikan').val(duedate.format("YYYY-MM-DD"));
                    $('#dueDatePerbaikan').prop("disabled", true);
                    @* $('#txtAreaBerpotensi').val(dataPerbaikan.WhyDesc);*@

            }, error: function (ex) {
                    alert(JSON.stringify(ex));
                }
            });
    }

    function getRootCausePencegahan(){
        var dto = {
            Kategori: "Cari Batal Pencegahan",
            RecordID: referenceID
        }
        $.ajax({
            url: "FindCAPADetail",
            type: "POST",
            async: false,
            dataType: "json",
            data: JSON.stringify(dto),
            contentType: "application/json;charset=utf-8",
            success: function (data) {
                var result = JSON.parse(data);
                dataPencegahan = result[0];
                var duedate = moment(dataPencegahan.Due_Date);
                $('#txtRootCausePencegahan').val(dataPencegahan.WhyDesc);
                $('#txtTindakanPencegahan').val(dataPencegahan.Tindakan_Pencegahan);
                $('#txtTindakanPencegahan').prop("disabled", true);
                $('#dueDatePencegahan').val(duedate.format("YYYY-MM-DD"));
                @* $('#txtAreaBerpotensi').val(dataPerbaikan.WhyDesc);*@

            }, error: function (ex) {
                alert(JSON.stringify(ex));
            }
        });
    }

    function SubmitPerbaikan()
    {
        var dictlist = {
            Kategori: "Batal Perbaikan",
            RecordID: referenceID,
            alasan_batal: $('#AlasanBatalPerbaikan').val()
        }
        var dto = {
            Model: dictlist
        }
        if (valid == true)
        {
            laststate = true;
        }
        if (laststate == true) {
            $.ajax({
                url: "DynamicController?spname=SP_Update_Pelaksanaan",
                type: "POST",
                async: false,
                dataType: "json",
                data: JSON.stringify(dto),
                contentType: "application/json;charset=utf-8",
                success: function (data) {
                    Swal.fire(
                        'Berhasil',
                        'Pembatalan berhasil di submit',
                        'success'
                    )
                    @* $('#txtAreaBerpotensi').val(dataPerbaikan.WhyDesc);*@

                }, error: function (ex) {
                    alert(JSON.stringify(ex));
                }
            });
        }
        else
        {
            Swal.fire(
                'Maaf',
                'tindakan harus dikaji terlebih dahulu.',
                'warning'
            )
        }

    }
    function SubmitPencegahan() {
        var dictlist = {
            Kategori: "Batal Pencegahan",
            RecordID: referenceID,
            alasan_batal: $('#AlasanBatalPencegahan').val()
        }
        var dto = {
            Model: dictlist
        }
        if (valid == true) {
            laststate = true;
        }
        if (laststate == true) {
            $.ajax({
                url: "DynamicController?spname=SP_Update_Pelaksanaan",
                type: "POST",
                async: false,
                dataType: "json",
                data: JSON.stringify(dto),
                contentType: "application/json;charset=utf-8",
                success: function (data) {
                    Swal.fire(
                        'Berhasil',
                        'Pembatalan berhasil di submit',
                        'success'
                    )
                    @* $('#txtAreaBerpotensi').val(dataPerbaikan.WhyDesc);*@

                }, error: function (ex) {
                    alert(JSON.stringify(ex));
                }
            });
        }
        else {
            Swal.fire(
                'Maaf',
                'tindakan harus dikaji terlebih dahulu.',
                'warning'
            )
        }

    }
</script>

