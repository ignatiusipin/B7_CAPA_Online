        $('#dueDatePencegahanRev').on('change', function () {
            var date = new Date();
            var datepencegahan = new Date($('#dueDatePencegahanRev').val());
            if ($('#AlasanDueDatePencegahan').val() != "" && $('#dueDatePencegahanRev').val() != "") {
