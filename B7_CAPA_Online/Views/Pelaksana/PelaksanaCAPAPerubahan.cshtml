                                Swal.fire(
                                    'Maaf',
                                    'Tanggal Due Date tidak boleh hari ini atau kurang dari hari ini',
                                    'warning'
                                )
                                valid = false;
                                return false;
                            }
                        }
                        count++;
                        return;
                    } else {
                        //console.log(key + ": " + value);
                        if (value == "") {
                            //console.log(dto.Model);
                            if (count <= limit) {
                                var label;
                                if (count == 13 || count == 14 || count == 22 || count == 23) {
                                    label = "Mohon untuk mengisi nilai Severity, Likelihood, dan Detectability yang tersedia.";
