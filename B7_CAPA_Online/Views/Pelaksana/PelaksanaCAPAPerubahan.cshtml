                    $('#Submit').attr("disabled", true);
                    return;
                }
                $('#btn_AddKajian').attr("disabled", false);
                $('#Submit').attr("disabled", false);
            }
        });
        $('#dueDatePerbaikanRev').on('change', function () {
            if ($('#AlasanDueDate').val() != "" && $('#dueDatePerbaikanRev').val() != "") {
                var date = new Date();
                var dateperbaikan = new Date($('#dueDatePerbaikanRev').val());
                if (dateperbaikan != "" && (date.getTime() > dateperbaikan.getTime())) {
                    Swal.fire(
                        'Maaf',
                        'Tanggal Due Date tidak boleh hari ini atau kurang dari hari ini',
                        'warning'
                    )
                    $('#btn_AddKajian').attr("disabled", true);
                    $('#Submit').attr("disabled", true);
                    return;
                }
                $('#btn_AddKajian').attr("disabled", false);
                $('#Submit').attr("disabled", false);
            }
        });
        $('#AlasanDueDatePencegahan').on('click', function () {
