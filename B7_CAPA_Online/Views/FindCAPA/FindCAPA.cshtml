
@{
    ViewBag.Title = "FindCAPA";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="content-body">
    <div class="row page-titles mx-0">
        <div class="col p-md-0">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="javascript:void(0)">Dashboard</a></li>
                <li class="breadcrumb-item active"><a href="javascript:void(0)">FindCAPA</a></li>
            </ol>
        </div>
    </div>
    <!-- row -->

    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Find CAPA</h4>
                        <div class="row form-group-sm">
                            <div class="col-md-6">
                                <label class="m-t-20">Status CAPA<span style="color: red">*</span></label>
                                <select class="form-control form-control-sm" id="Trigger_CAPA">
                                    <option value="Open">Open</option>
                                    <option value="ApprovedCAPA">ApprovedCAPA</option>
                                    <option value="Closed">Closed</option>
                                    <option value="ClosedWithInitial">Closed with initial New CAPA</option>
                                    <option value="Cancelled">Cancelled</option>
                                </select>
                            </div>
                        </div>
                        <div class="row form-group-sm">
                            <div class="col-md-6">
                                <label class="m-t-20">Departemen PIC CAPA<span style="color: red">*</span></label>
                                <select class="form-control form-control-sm" id="Trigger_CAPA">
                                </select>
                            </div>
                        </div>
                        <div class="row form-group-sm">
                            <div class="col-md-6">
                                <label class="m-t-20">Ketegori<span style="color: red">*</span></label>
                                <select class="form-control form-control-sm" id="Trigger_CAPA">
                                    <option value="Produk">Kualitas Terkait Produk</option>
                                    <option value="NonProduk">Kualitas Terkait Non Produk</option>
                                    <option value="Material">Kualitas Terkait Material Awal</option>
                                    <option value="SIA">Internal Audit (SIA)</option>
                                    <option value="SEA">External Audit (SEA)</option>
                                    <option value="HSE">HSE</option>
                                </select>
                            </div>
                        </div>
                        <div class="row form-group-sm">
                            <div class="col-md-6">
                                <label class="m-t-20">Tahun<span style="color: red">*</span></label>
                                <select class="form-control form-control-sm" id="Trigger_CAPA">
                                </select>
                            </div>
                        </div>
                        <div class="row form-group-sm">
                            <div class="col-md-6">
                                <label class="m-t-20">Lokasi Site<span style="color: red">*</span></label>
                                <select class="form-control form-control-sm" id="Trigger_CAPA">
                                    <option value="Cikarang">Cikarang</option>
                                    <option value="Pulogadung">Pulogadung</option>
                                    <option value="HeadOffice">Head Office</option>
                                    <option value="All">All</option>
                                </select>
                            </div>
                        </div>
                        <div class="row form-group-sm mt-3">
                            <div class="col-md-6">
                                <button class="btn btn-primary">Filter</button>
                            </div>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-bordered zero-configuration">
                                <thead>
                                    <tr>
                                        <th>No CAPA</th>
                                        <th>PIC CAPA</th>
                                        <th>Departemen</th>
                                        <th>Site</th>
                                        <th>Kategori CAPA</th>
                                        <th>Deskripsi Singkat</th>
                                        <th>Status</th>
                                        <th>Outstanding</th>
                                        <th>Tanggal Outstanding</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td>CPA/QXX/AAA/BB/CCDD/EEE</td>
                                        <td>Arya Saloka</td>
                                        <td>Produksi</td>
                                        <td>Cikarang</td>
                                        <td>Kualitas produk</td>
                                        <td>xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx</td>
                                        <td>Waiting Approval Koordinator</td>
                                        <td>Tri Pamulatsih</td>
                                        <td>29 Juni 2021</td>
                                    </tr>                                    
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>               
            </div>
        </div>
    </div>
    <!-- #/ container -->
</div>