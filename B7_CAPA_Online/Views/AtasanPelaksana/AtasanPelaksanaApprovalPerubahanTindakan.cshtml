                                    Model: {
                                        NO_CAPA: noCAPA,
                                        Temp_Status: 6,
                                        Tindakan: 'Pencegahan',
                                        Tindakan_ID: id
                                    }
                                }),
                                dataType: 'json',
                                contentType: 'application/json; charset=utf-8',
                                success: function (data) {
