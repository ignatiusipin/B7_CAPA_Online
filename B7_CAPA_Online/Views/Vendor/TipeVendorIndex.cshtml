<script>
    $(document).ready(function () {
        $('#table_vendor').DataTable();
        GetManagerUp();
        $("#AddTipe").click(function () {
            AddTipeVendor();
        });
    });

    function Edit(id) {
        var link = "@Html.Raw(@Url.Action("EditTipeVendor", "Vendor", new { tipeVendorID = "param1"}))";
        link = link.replace("param1", id);
        window.open(link, '_self');
    }



