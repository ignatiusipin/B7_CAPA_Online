    var isHide = false;
    function ColoredColumns(row, d, className) {
        if (d == "Low") {
            $('td.' + className, row).css({
                background: "limegreen",
                color: "black"
            });
        } else if (d == "Medium") {
            $('td.' + className, row).css({
                background: "yellow",
                color: "black"
            });
        } else if (d == "High") {
            $('td.' + className, row).css({
                background: "red",
                color: "white"
            });
        } else if (d == "Very High") {
            $('td.' + className, row).css({
                background: "black",
                color: "white"
            });
        }
